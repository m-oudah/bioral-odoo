<openerp>
    <data>
        <template id="reaya_layout">
            <xpath expr="//div[@t-attf-class='header o_company_#{company.id}_layout']" position="replace">

                <div class="header"
                     style="  vertical-align:middle; font-family:Oswald,Calibri; ">
                    <div class="row align-middle">
                        <div class="col-3" >
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" width="150px"
                                 alt="Reaya Logo"/>
                        </div>
                        <div class="col-9 text-right" style="vertical-align:middle; border-bottom:5px solid #c61618;">
                            <div> Reaya for Food Industries </div>
                            <div>  info@rfi-food.com </div>
                            <div>  www.rfi-food.com </div>
                            <div> Tel. +997770221 </div>

                            <!--                                <span class="company_address" t-field="company.partner_id"-->
                            <!--                                      t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>-->


                        </div>
                    </div>
                </div>



        </xpath>


        <div t-attf-class="article o_report_layout_boxed o_company_#{company.id}_layout"
             t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')" style="border-bottom:0px;">
            <div class="pt-5">
                <!-- This div ensures that the address is not cropped by the header. -->
                <t t-call="web.address_layout"/>
            </div>
            <t t-raw="0"/>
        </div>

        <xpath expr="//div[@t-attf-class='footer o_boxed_footer o_company_#{company.id}_layout']"
               position="replace">

            <div class="footer">

                <div class="row align-middle"
                     style=" padding:2px; color:#555;">
                    <div class="col-10 float-left " style="padding:15px; border-top:5px solid #c61618; font-family:Oswald,Calibri;  ">


                        <div class="col-md-6 mb-4">

                            <ul class="list-unstyled ">
                                <li>
                                    <span t-field="company.company_registry"/>
                                </li>

                                <li>
                                    <span>
                                        <a href="mailto:info@rfi-foof.com"><span t-field="company.email"/></a>
                                    </span>
                                </li>

                                <li>
                                    <span>
                                        Industrial Zone [124] - AlZarqa - Amman- Jordan
                                    </span>

                                </li>

                            </ul>


                        </div>

                    </div>

                    <div class="col-2 float-right">
                        <img src='/brandon/static/src/addvet_qr.png' width="110px"/>
                    </div>
                </div>


            </div> <!-- Footer Div -->

        </xpath>
    </template>
</data>
        </openerp>
